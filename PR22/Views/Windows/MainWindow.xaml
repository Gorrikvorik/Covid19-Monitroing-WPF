                                <ResourceDictionary.MergedDictionaries>
                                    <ResourceDictionary Source="../../Resources\DataTemplates\CompositeListItems.xaml"/>
                                </ResourceDictionary.MergedDictionaries>
                            </ResourceDictionary>


